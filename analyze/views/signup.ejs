<%- include('header') %>
<div class="login-background">
  <div class="login">
    <h2>游戏机管理系统</h2>
    <div class="login-top">
      <h1>注册</h1>
      <form method="post">
        <input placeholder="用户名" type="text" name="name"  required="required">
        <input placeholder="密码" type="password" name="password"  required="required">
        <input placeholder="重复密码" type="password" name="repassword"  required="required">
        <div class="forgot">
          <input type="submit" value="注册" >
        </div>
      </form>

      <div class="login-bottom">
        已有账号?
        <a href="/signin">返回登录</a>
      </div>
    </div>
  </div>
</div>
<%- include('footer') %>
